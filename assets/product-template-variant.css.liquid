.carousel-description-wrapper {
	margin-top:40px;
	margin-left:0px;
	margin-right:0px;
}

.mobile-carousel {
	display:none;
}
.desktop-carousel {
	margin-top:0px;
}
#product-page-desktop-carousel {
	padding:0px;
}
.desktop-carousel .carousel-indicators {
	margin-top:0px;
	margin-bottom:0px;
	left:0;
	top:0;
	width:auto;
	margin-left:0;
	text-align:none;
}
.desktop-carousel .carousel-indicators li {
	width:100%;
	height:auto;
	margin-top:0px;
	margin-right:0px;
	margin-left:0px;
	margin-bottom:10px;
	border:none;
	transform:none;
	display:block;
	text-indent:0;
}
.desktop-carousel .carousel-indicators li.active {
	outline-offset: 4px;
	outline-color:#A0A0A0;
	outline-width:1.5px;
}
.desktop-carousel .carousel-inner-wrap {
	float:right;
}
.desktop-carousel .carousel-inner-wrap .carousel-inner {

	padding:0;
}

.product-header {
	margin-bottom:25px;
}
.product-page-container .carousel-description-wrapper .text {
	padding-left:30px;
	margin-top:20px;
}
.product-page-container .carousel-description-wrapper .text .product-header .title {
	font-size:27px;
	margin-bottom:20px;
	font-family:oswaldmedium;
	letter-spacing:1px;
	text-transform:uppercase;
	color:#4D4D4A;
	display:block;
}
.product-page-container .carousel-description-wrapper .text .product-header .price {
	font-size:18px;
	font-family:apercubold;
	color:#4D4D4A;
}

.addtocart-button-mobile {
	display:none;
}
input[type=radio] {
	display: none;
}
.ash-label {
	margin: 0px;
}
.ash-description {
	display:inline-block;
	font-weight: normal;
	font-size:17px;
	margin-left: 10px;
	line-height:42px;
}
.ash-description p {
	font-family:apercumedium;
}
#ash-desktop + label {
	display:block;
	border-radius:50%;
	background-repeat: no-repeat;
	padding-left: 41px;
	padding-bottom:5px;
}
#ash-desktop label img {
	border-radius: 50%;
}
#ash-desktop:checked + label {
	background-image: url({{'ash-circle-selected.svg'|asset_url}});
}
#walnut-desktop + label {
	background-image: url({{'walnut-circle.svg'|asset_url}});
	padding-left:41px;
	background-repeat: no-repeat;
	padding-bottom:15px;
}
#walnut-desktop:checked + label {
	background-image: url({{'walnut-circle-selected.svg'|asset_url}});
}
.walnut-label {
	margin:0px;
}

.walnut-description {
	display: inline-block;
	font-weight: normal;
	font-size:17px;
	margin-left: 10px;	
	line-height:42px;
}
.walnut-description p {
	white-space: nowrap;
	font-family:apercumedium;
}
.product-page-container .carousel-description-wrapper .text .product-description span {
	font-family:apercumedium;
	font-size:17px;
}
.product-page-container .carousel-description-wrapper .text .addtocart-button-desktop input[type=submit] {
	margin-top:50px;
	padding:13px 80px 13px 80px;
	background: none;
	outline: none;
	border: 1.5px solid #4D4D4A;
	display:block;
	font-family:apercumedium;
	font-size:15px;
	color:#4D4D4A;
}
.social-media {
	padding-left:0;
	margin-top:35px;
}
.social-media .product-media-links {
	padding-left:0;
}
.social-media .product-media-links a img {
	padding-right:45px;
	height:23px;
}

/* removes default bootstrap slide animation */
@media all and (transform-3d), (-webkit-transform-3d) {
    .carousel-fade .carousel-inner > .item.next,
    .carousel-fade .carousel-inner > .item.active.right {
      	opacity: 0;
        -webkit-transform: translate3d(0, 0, 0);
        transform: translate3d(0, 0, 0);
    }
    .carousel-fade .carousel-inner > .item.prev,
    .carousel-fade .carousel-inner > .item.active.left {
      opacity: 0;
      -webkit-transform: translate3d(0, 0, 0);
              transform: translate3d(0, 0, 0);
    }
    .carousel-fade .carousel-inner > .item.next.left,
    .carousel-fade .carousel-inner > .item.prev.right,
    .carousel-fade .carousel-inner > .item.active {
      opacity: 1;
      -webkit-transform: translate3d(0, 0, 0);
              transform: translate3d(0, 0, 0);
    }
}

.product-showcase {
	margin-top:45px;
}
.product-showcase .showcase-image {
	padding-right:0;
	padding-left:40px;
}
.product-showcase .showcase-image .image-wrapper {
	width:100%;
}
.product-showcase .showcase-image .image-wrapper img {
	width:100%;
}
.divider-row {
	margin:0;
}
.divider-wrap {
	padding-left:30px;
	padding-right:17px;
}
.divider-product-page {
