{% schema %}
	{
		"name": "About Page",
		"settings": [
			{
				"type":"image_picker",
				"id":"first_hero_image",
				"label":"First Image"
			},
			{
				"type": "text",
				"id":"first_hero_text",
				"label": "First Description"
			},
			{
				"type":"image_picker",
				"id":"second_hero_image",
				"label":"Second Image"
			},
			{
				"type":"text",
				"id": "second_hero_text",
				"label":"Second Description"
			},
			{
				"type":"image_picker",
				"id":"third_hero_image",
				"label":"Third Image"
			},
			{
				"type":"text",
				"id":"third_hero_text",
				"label":"Third Description"
			}
		]
	}
{% endschema %}

<div class="container about-page">
	<div class="about-header col-xs-12">
		<p> {{page.title}} </p>
	</div>
	<div class="first-hero full-width" style="background:url({{first_hero_image | img_url:'master'}})">
		<div class="first-hero-content-wrapper">
			<p> {{first_hero_text}} </p>
		</div>
	</div>
	<div class="second-hero full width" style="background:url({{second_hero_image | img_url:'master'}})">
		<div class="second-hero-content-wrapper">
			<p> {{second_hero_text}} </p>
		</div>
	</div>
	<div class="third-hero full-width" style="background:url({{third_hero_image | img_url:'master'}})">
		<div class="third-hero-content-wrapper">
			<p> {{third_hero_text}} </p>
		</div>
	</div>
</div>