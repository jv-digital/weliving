<div class="header nopadding container">
  <div class="mobile-menu-wrapper col-xs-3">
    <div class="mobile-menu">
      <p>menu</p>
    </div>
  </div>
  <div class="home-icon-wrapper col-xs-6 col-md-2">
    <div class="home-icon">
      <a href="/"><img src="https://cdn.shopify.com/s/files/1/2176/2625/files/weliving_logo.png?11859824361046747801"></a>
    </div>
  </div>
  <div class="navigation-links-wrapper col-md-8">
    <ul class="navigation">
      <li class="shop-link"><a href="/collections/products">shop</a>{% if template == 'collection' or template =='product' %}<div class="selected-shop"></div>{% endif %}</li>
      <li class="about-link"><a href="/pages/about?view=about">about</a>{% if template == 'page.about' %}<div class="selected-about"></div>{%endif%}</li>
      <li class="blog-link"><a href="/blogs/posts?view=recent-and-categories">blog</a>{% if template == 'blog.recent-and-categories' or template == 'blog' or template =='article'%} <div class="selected-blog"></div>{% endif %}</li>
      <li class="lookbook-link"><a class="realign" href="#">lookbook</a></li>
      <li class="help-dropdown">
        <div class="dropdown-link">
          <p class="dropdown-text">need help</p>
        </div>
        <div class="selected-help"></div>
        <div class="dropdown-content">
          <a href="/pages/shipping-and-return?view=shipping-and-return">shipping & return</a>
          <a href="/pages/faq?view=faq">faq</a>
          <a href="/pages/contact?view=contact">contact</a>
        </div>
      </li>
    </ul>
  </div>
  <div class="sign-in-checkout-wrapper col-xs-3 col-md-2">
    <div class="sign-in">
      <p><a href="/account/login">sign in</a></p>
    </div>
    <div class="checkout-img">
      <img src="https://via.placeholder.com/30x30">
    </div>
  </div>
</div>


