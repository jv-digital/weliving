{% schema %}
{
	"blocks": [
		{
			"type":"image",
			"name":"Lookbook Image",
			"settings": [
				{
					"type":"image_picker",
					"id":"image",
					"label":"Upload an image for desktop"
				},
				{
					"type":"image_picker",
					"id":"image_mobile",
					"label":"Upload an image for mobile"
				}
			]
		}
	]
}
{% endschema %}
<div class="lookbook-page container">
	<div class="lookbook-header">
		<p>look book</p>
	</div>
	<div class="lookbook-image-wrapper">
	{% for block in section.blocks %}
		<div class="lookbook-image col-xs-6 col-md-4">
			<img src="{{block.settings.image |img_url:'master'}}">
		</div>
		{% if forloop.index == 9 %}
			{% break %}
		{% endif %}
		<div class="lookbook-image-mobile col-xs-6">
			<img src="{{block.settings.image_mobile|img_url:'master'}}">
		</div>
	{% endfor %}
	</div>
</div>
