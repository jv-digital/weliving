{% schema %}
	{
		"name": "Featured Collection 2",
		"settings": [
			{
				"type": "image_picker",
				"id": "image",
				"label":"Image for desktop"
			},
			{
				"type":"image_picker",
				"id":"image_mobile",
				"label":"Image for mobile"
			},
			{
				"type": "text",
				"id": "title",
				"label":"Title"
			},
			{
				"type": "text",
				"id":"description",
				"label":"Description"
			},
			{
				"type": "text",
				"id": "button_label",
				"label":"Button Label"
			},
			{
				"type": "text",
				"id": "button_link",
				"label":"Button Link"
			}
		],
		"presets": [
		{
			"name": "Featured Collection 2",
			"category": "image",
			"settings": {
				"title":"Collection Title",
				"description":"Describe your product here.",
				"button_label":"Take a closer look",
				"button_link":"/collections/products"
			}
		}
	]
}
{% endschema %}


<div class="featured-collection-2 container">
	<div class="featured-content row">
		<div class="img-wrapper-2 col-xs-12 col-md-7 col-md-push-5">
			<img class="desktop-image" src="{{section.settings.image | img_url:'master'}}">
			<img class="mobile-image" src="{{section.settings.image_mobile |img_url:'master'}}">
		</div>	
		<div class="content-2 col-xs-12 col-md-5 col-md-pull-7">
			<div class="text-button-2 col-md-11">
				<p class="text-2">
					<span class="title-2"><b>{{section.settings.title}}</b></span>
					<span>{{ section.settings.description }}</span>
				</p>
				<a href="{{section.settings.button_link}}" class="feature-collection-button">{{ section.settings.button_label }}</a>
			</div>	
   			<div class="angle-2 hidden-xs hidden-sm"></div>
    	</div>
	</div>
</div>


